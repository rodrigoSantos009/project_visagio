<div class="list-items-card">
  <div class="list-items">
    <h1 class="list-title" ><%= @list.title %></h1>

    <% if @list.items.any? %>
      <% @list.items.each do |item| %>
        <p class="list-item"><%= item.title %></p>
    <% end %>
    <% else %>
      <p>No items in this list yet. <%= link_to 'Add item', new_list_item_path(@list) %></p>
    <% end %>

    <div>
      <%= link_to 'Edit', edit_list_path(@list) %> |
      <%= link_to 'Back', lists_path %>
    </div>

    <p><%= link_to 'Add item', new_list_item_path(@list) %></p>
  </div>
</div>