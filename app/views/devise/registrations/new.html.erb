<div class="user-form">
  <h2 class="user-form-title">Cadastre-se</h2>
  <div class="user-form-fields">

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-field email-input">
    <%= f.email_field :email, autofocus: true, placeholder: "E-mail", autocomplete: "email", class: 'field email' %>
  </div>

  <div class="form-field pwd-input">
    <% if @minimum_password_length %>
    <% end %>
    <%= f.password_field :password, placeholder: "Senha (minÃ­mo 6 caracteres)", autocomplete: "new-password", class: 'field password' %>
  </div>

  <div class="form-field">
    <%= f.password_field :password_confirmation, placeholder: "Confirmar senha" , autocomplete: "new-password", class: 'field password' %>
  </div>

  <div>
    <%= f.submit "Cadastrar", class: 'field btn-login' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
  </div>
</div>
