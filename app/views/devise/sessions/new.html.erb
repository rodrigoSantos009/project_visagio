<div class="user-form" >
  <h2 class="user-form-title">Entrar</h2>

<div class="user-form-fields">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-field email-input">
    <%= f.email_field :email, autofocus: true, placeholder: 'E-mail', autocomplete: "email", class: 'field email' %>
  </div>

  <div class="form-field pwd-input">
    <%= f.password_field :password, placeholder: "Password" , autocomplete: "current-password", class: 'field password'%>
  </div>

  <div>
    <%= f.submit "Log in", class: 'field btn-login' %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="form-field">
      <%= f.check_box :remember_me, class: 'remember-field' %>
      <%= f.label :Lembrar_senha, class: 'remember-field'%>
      <%= link_to 'Cadastrar', new_user_registration_path, style: "margin-left: 5px; color: #151F30; font-size: 1.2rem" %>
    </div>
  <% end %>
<% end %>
</div>

</div>